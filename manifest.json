{
  "manifest_version": 3,
  "name": "截圖翻譯器",
  "version": "1.1.0",
  "description": "智能截圖翻譯工具 - 選擇任意區域，即時識別並翻譯文字",
  "author": "Screenshot Translator Team",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://translate.googleapis.com/*",
    "https://api.mymemory.translated.net/*",
    "https://unpkg.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "截圖翻譯器 - 點擊開始",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "start-capture": {
      "suggested_key": {
        "default": "Alt+2",
        "mac": "Alt+2",
        "windows": "Alt+2",
        "linux": "Alt+2"
      },
      "description": "開始截圖翻譯"
    }
  }
}
